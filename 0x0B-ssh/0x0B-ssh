# Connect to your server
ssh ubuntu@your_server_ip

# If the .ssh directory doesn't exist, create it
mkdir -p ~/.ssh

# Change permissions of the .ssh directory
chmod 700 ~/.ssh

# Navigate to the .ssh directory
cd ~/.ssh

# Create or append to the authorized_keys file
echo "ssh-rsa " >> authorized_keys

# Change permissions of the authorized_keys file
chmod 600 authorized_keys
